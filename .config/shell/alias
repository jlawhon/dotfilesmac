# misc
#
alias v="nvim"
alias vi="nvim"

# mkdir aliases
alias md='mkdir -p'
alias rd=rmdir

# zoxide - cd replacement
alias cd="z"

# change dir aliases
alias ..="cd .."
alias ...="cd ..; cd .."
alias -- -="cd -"

# weather
alias we='curl wttr.in/Dal\?u\&format="%l:+%c+%h+%t+%f\n"'

# eza - ls replacement
alias ls='eza --icons=always'
alias l='eza -lF --git --group-directories-first'
alias ll='eza -lah --git --group-directories-first'
alias llm='eza -al --sort=modified --git --group-directories-first --octal-permissions'

#alias llm='eza -lbGd --git --sort=modified'
alias la='eza -lhHigUmuSa --time-style=long-iso --git --color-scale'
alias lx='eza -lhHigUmuSa@ --time-style=long-iso --git --color-scale'

# specialty views
alias lS='eza -1'
alias lt='eza --tree --level=2'
alias l.="eza -a | grep -E '^\.'"
